{
  "name": "SAP_CAP Project",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "VARIANT": "20" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "sapse.vscode-cds",
        "dbaeumer.vscode-eslint",
        "humao.rest-client",
        "qwtel.sqlite-viewer",
        "mechatroner.rainbow-csv",
        "vscjava.vscode-java-pack",
        "redhat.vscode-xml",
        "vmware.vscode-spring-boot",
        "pivotal.vscode-boot-dev-pack"
      ]
    }
  },
  "forwardPorts": [4004, 8080],
  "remoteUser": "node",
  "postCreateCommand": "sudo npm install -g @sap/cds-dk --prefix=/usr/local"
}